{{define "form"}}
          <form class="contact100-form validate-form" method="POST" action="/swap">

            <div class="wrap-input100 validate-input" data-validate="Lightning invoice is required">
              <span class="label-input100">Lightning invoice</span>
              <input class="input100" type="text" name="invoice" placeholder="Enter your Lightning invoice">
              <span class="focus-input100"></span>
            </div>

            <div class="container-contact100-form-btn">
              <div class="wrap-contact100-form-btn">
                <div class="contact100-form-bgbtn"></div>
                <button class="contact100-form-btn">
                  <span>
                    Swap
                    <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                  </span>
                </button>
              </div>
            </div>
          </form>

          <div id="dropDownSelect1"></div>
{{end}}
